<Window x:Class="XeroxTest.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ImageSourceConverter x:Key="imgConverter" />
    </Window.Resources>
    <Grid>
        <ListBox Name="ListBoxq" ItemsSource="{Binding Path=SpaceObjects, Mode=TwoWay}" SelectedItem="{Binding Path=SelectedSpaceObject, Mode=TwoWay}" HorizontalAlignment="Left"  Margin="0,0,0,0" VerticalAlignment="Stretch" Width="250" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <ContentControl Content="{Binding Path=SelectedSpaceObject, Mode=TwoWay}" Width="250" HorizontalAlignment="Right">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Name, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=WikiPage, Mode=TwoWay}"></TextBlock>
                        <Image Source="{Binding Path=Img.Source, Mode=TwoWay}" Width="100" Height="100"></Image>
                        <TextBlock Text="{Binding Path=ImageHint, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=MeanRadiusInKm, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=MeanRadiusByEarth, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=Volume10Pow9Km3, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=VolumeByEarth, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=Mass10Pow21Kg, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=MassByEarth, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=DestinygByCm3, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=SurfaceGravitymByS2, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=SurfaceGravityByEarth, Mode=TwoWay}"></TextBlock>
                        <TextBlock Text="{Binding Path=TypeOfObject, Mode=TwoWay}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</Window>
